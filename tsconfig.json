{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "ES5",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "module": "CommonJS",
    "sourceMap": true
  },
  "include": ["./src/**/*"]
}
