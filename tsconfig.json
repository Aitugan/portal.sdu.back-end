{
  "compilerOptions": {
    // build settings
    "outDir": "./build",
    "moduleResolution": "node",
    "rootDirs": ["./src", "./test"],
    "sourceMap": true,
    "target": "ES5",
    "noEmit": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,

    // js settings
    "allowJs": true,
    "checkJs": false,

    // checking rules
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
    "removeComments": true,

    // path resolving
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./test/*"]
    }
  },
  "include": ["./src/**/*", "./test/**/*"]
}
