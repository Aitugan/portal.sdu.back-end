{
  "compilerOptions": {
    // build settings
    "outDir": "./build",
    "moduleResolution": "node",
    "rootDir": "./src",
    "module": "CommonJS",
    "sourceMap": true,
    "target": "ES5",
    "noEmit": true,

    // js settings
    "allowJs": true,
    "checkJs": true,

    // checking rules
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,

    // path resolving
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"]
}
